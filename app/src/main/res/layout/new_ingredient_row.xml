<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TableRow
            android:id="@+id/new_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
        />

        <AutoCompleteTextView

                android:id="@+id/new_auto_complete_view"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1.0"
                android:textSize="15dp"
                android:layout_marginLeft="6dp"
                android:maxLines="2"
                android:elevation="2dp"
                android:background="@drawable/thin_black_border_background"
        />

        <EditText
                android:id="@+id/new_quantity"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:textSize="15dp"
                android:inputType="numberDecimal"
                android:background="@drawable/thin_black_border_background"
                android:layout_marginLeft="5dp"
                android:elevation="2dp"
                android:maxLines="1"
        />

        <Spinner
                android:id="@+id/new_measurement_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <ImageView
                android:id="@+id/delete_image_view"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:src="@mipmap/ic_remove_circle_outline_black_18dp"
        />
    </TableRow>

</LinearLayout>